# StreamFlow Configuration
# Copy this file to .env and update the values

# Environment
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql+asyncpg://streamflow:password@localhost:5432/streamflow
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# RabbitMQ Configuration
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE_EVENTS=events
RABBITMQ_EXCHANGE_ANALYTICS=analytics
RABBITMQ_EXCHANGE_ALERTS=alerts
RABBITMQ_QUEUE_INGESTION=ingestion
RABBITMQ_QUEUE_ANALYTICS=analytics
RABBITMQ_QUEUE_ALERTS=alerts

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
JWT_REFRESH_EXPIRE_DAYS=7

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:8000"]

# Service Ports
INGESTION_PORT=8001
ANALYTICS_PORT=8002
ALERTING_PORT=8003
DASHBOARD_PORT=8004
STORAGE_PORT=8005

# Security
PASSWORD_MIN_LENGTH=8
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=

# Data Processing
BATCH_SIZE=1000
PROCESSING_TIMEOUT=30
MAX_RETRIES=3

# Alert Configuration
ALERT_EVALUATION_INTERVAL=60
ALERT_MAX_NOTIFICATIONS_PER_HOUR=10

# UI Configuration
UI_TITLE=StreamFlow Dashboard
UI_DESCRIPTION=Real-time Analytics Pipeline
UI_VERSION=1.0.0
UI_THEME=dark

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
FROM_EMAIL=noreply@streamflow.dev

# Slack Configuration (Optional)
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts

# External Services (Optional)
SENTRY_DSN=
PROMETHEUS_URL=
GRAFANA_URL=